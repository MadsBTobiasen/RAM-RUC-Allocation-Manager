@page "{id:int}"
@using RAM___RUC_Allocation_Manager.Models
@model RAM___RUC_Allocation_Manager.Pages.LeaderLandingPage.LeaderLandingPageModel
@{
}
@section Scripts
{
    <script>

    function myFunction() {
        $("#myModal").on("submit", function (event) {
            event.preventDefault();
        });

        $( "#myModal" ).submit(function( event ) {
            event.preventDefault();
        });

        //$(document).ready(function () {
        /*$("#myModal").modal({ backdrop: "static" });*/
        //    $("#myModal").modal("show");
        //});
    </script>
}

<form method="post">
    <div class="container">
        <button type="button" class="btn btn-primary" data-toggle="modal" data-target="#myModal">Create a new user</button>
        <div class="modal" id="myModal">
            <div class="modal-dialog">
                <div class="modal-content">

                    <div class="modal-header">
                        <h5 class="modal-title">Add a new User</h5>
                        <a type="button" class="close" asp-page="/Index">&times;</a>
                    </div>

                    <div class="modal-body">
                        <div class="form-group">
                            <select class="form-control" asp-for="CreatedUser.Type"
                                    asp-items="Html.GetEnumSelectList<User.UserType>()">
                                <option selected="selected" value="">User Type</option>
                            </select>
                            <br />
                            <input type="submit" asp-page-handler="CheckType" onClick="myFunction()" value="Vælg Bruger Type" class="btn btn-primary"/>
                        </div>

                        <br />

                        @if (Model.IsLeader == false)
                        {
                            <select class="form-control" asp-for="Employee.Title"
                                    asp-items="Html.GetEnumSelectList<Employee.EmployeeTitle>()">
                                <option selected="selected" value="">Employee Title</option>
                            </select>
                        }

                        <div class="form-group">
                                     <label asp-for="@Model.CreatedUser.Id" class="control-lable"></label>
                                     <input asp-for="@Model.CreatedUser.Id" class="form-control" readonly/>
                            </div>

                        <div class="form-group">
                            <label asp-for="@Model.CreatedUser.Name" class="control-lable"></label>
                            <input asp-for="@Model.CreatedUser.Name" class="form-control" />
                        </div>
                        <div class="form-group">
                            <label asp-for="@Model.CreatedUser.Password" class="control-lable"></label>
                            <input asp-for="@Model.CreatedUser.Password" class="form-control" />
                        </div>
                        <div class="form-group">
                            <label asp-for="@Model.CreatedUser.Username" class="control-lable"></label>
                            <input asp-for="@Model.CreatedUser.Username" class="form-control" />
                        </div>
                        <div class="form-group">
                            <label asp-for="@Model.CreatedUser.Email" class="control-lable"></label>
                            <input asp-for="@Model.CreatedUser.Email" class="form-control" />
                        </div>

                        <div class="modal-footer">
                            <div class="form-group">
                                <a type="button" class="btn btn-danger" asp-page="/Index">Close</a>
                                <input type="submit" asp-page-handler="CreateUser" value="Create" class="btn btn-primary">
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</form>

<h2 class="text-white pb-3">Velkommen @Model.Leader.Name</h2>

<div class="row">

    <div class="col-1"></div>
    <div class="col-10">

        <h3 class="">Alle Undervisere for dine studier</h3>

        <form method="post" class="float-right pb-3" asp-page-handler="PaginatedResult">
            <button class="btn btn-primary text-white-hover" onclick="decrementOne('paginationProgrammeEmployees', '1')"><i class="fa-solid fa-arrow-left"></i></button>
            <input hidden="@true" id="paginationProgrammeEmployees" asp-for="PageIndexProgrammeEmployees" />
            <span class="h5 vertical-align-md mb-0">@(Model.PageIndexProgrammeEmployees+1) | @(Model.PageMaxProgrammeEmployees+1)</span>
            <button class="btn btn-primary text-white-hover" onclick="incrementOne('paginationProgrammeEmployees', '@Model.PageMaxProgrammeEmployees')"><i class="fa-solid fa-arrow-right"></i></button>
        </form>

        <table class="leader-landing-page table-dark table-striped">

            <thead>

                <tr>
                    <th style="width:10%" scope="col" class="text-center">#</th>
                    <th scope="col" class="text-center">Navn</th>
                    <th scope="col" class="text-center">Titel</th>
                    <th style="width:10%" scope="col" class="text-center">Se</th>
                    <th style="width:10%" scope="col" class="text-center">Redigér</th>
                </tr>

            </thead>

            <tbody>

                @for (int i = 0; i < Model.PaginatedProgrammeEmployees.Count; i++)
                {
                    <tr style="height: 1rem;">
                        <th style="width:10%" scope="row" class="text-center">@(i + (Model.MaxItemsProgrammeEmployees * Model.PageIndexProgrammeEmployees))</th>
                        <td class="text-left">@((Model.PaginatedProgrammeEmployees[i] as Models.Employee).Name)</td>
                        <td class="text-left">@((Model.PaginatedProgrammeEmployees[i] as Models.Employee).Title)</td>
                        <td style="width:10%" class="text-center"><i class="fa-solid fa-circle-info"></i></td>
                        <td style="width:10%" class="text-center"><i class="fa-solid fa-pen"></i></td>
                    </tr>
                }

            </tbody>

        </table>

    </div>
    <div class="col-1"></div>

    <hr />

    <div class="col-1"></div>
    <div class="col-10">

        <h3 class="">Alle Undervisere</h3>

        <form method="post" class="float-right pb-3" asp-page-handler="PaginatedResult">
            <button class="btn btn-primary text-white-hover" onclick="decrementOne('paginationAllEmployeesInput', '1')"><i class="fa-solid fa-arrow-left"></i></button>
            <input hidden="@true" id="paginationAllEmployeesInput" asp-for="PageIndexAllEmployees" />
            <span class="h5 vertical-align-md mb-0">@(Model.PageIndexAllEmployees+1) | @(Model.PageMaxAllEmployees+1)</span>
            <button class="btn btn-primary text-white-hover" onclick="incrementOne('paginationAllEmployeesInput', '@Model.PageMaxAllEmployees')"><i class="fa-solid fa-arrow-right"></i></button>
        </form>

        <table class="leader-landing-page table-dark table-striped">

            <thead>

                <tr>
                    <th style="width:10%" scope="col" class="text-center">#</th>
                    <th scope="col" class="text-center">Navn</th>
                    <th scope="col" class="text-center">Titel</th>
                    <th style="width:10%" scope="col" class="text-center">Se</th>
                    <th style="width:10%" scope="col" class="text-center">Redigér</th>
                </tr>

            </thead>

            <tbody>

                @for (int i = 0; i < Model.PaginatedEmployees.Count; i++)
                {
                    <tr style="height: 1rem;">
                        <th style="width:10%" scope="row" class="text-center">@(i + (Model.MaxItemsAllEmployees * Model.PageIndexAllEmployees))</th>
                        <td class="text-left">@((Model.PaginatedEmployees[i] as Models.Employee).Name)</td>
                        <td class="text-left">@((Model.PaginatedEmployees[i] as Models.Employee).Title)</td>
                        <td style="width:10%" class="text-center"><i class="fa-solid fa-circle-info"></i></td>
                        <td style="width:10%" class="text-center"><i class="fa-solid fa-pen"></i></td>
                    </tr>
                }

            </tbody>

        </table>

    </div>
    <div class="col-1"></div>

    <hr />

</div>
