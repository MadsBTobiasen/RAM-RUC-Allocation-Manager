@page "{id:int}"
@model RAM___RUC_Allocation_Manager.Pages.TotalAllocatedHoursPage.TotalAllocatedHoursPageModel
@{
}

<h2>Detaljer for totalt allokerede timer</h2>

<div class="row">
    <div class="col-3 pl-0"><a class="btn btn-primary" asp-route-id="@Model.RequestedID" asp-page="/EmployeeLandingPage/EmployeeLandingPage">Gå Tilbage</a></div>
    <div class="col-9"></div>
</div>

<hr />

<div class="row">

    <div class="col-1"></div>
    <div class="col-10">

        <h3 class="">Time fordeling</h3>

        <table class="employee-landing-page allocated-hours-table">

            <tbody>

                <tr>
                    <td>Grundtime tal:</td>
                    <td>@Model.ConvertMinutesToHours(Model.EmployeeBaseMinutes)</td>
                </tr>

                <tr>
                    <td>Opsparing:</td>
                    <td>@Convert.ToInt32(Model.Employee.Savings)/5</td>
                </tr>

                <tr>
                    <td>Frikøb for semester:</td>
                    <td>@Model.ConvertMinutesToHours(Model.Employee.CalculateRedeemedMinutes())</td>
                </tr>

                <tr>
                    <td>Gæld/Overskud:</td>
                    <td>@Model.ConvertMinutesToHours(Model.Employee.Balance)</td>
                </tr>

            </tbody>

        </table>

    </div>
    <div class="col-1"></div>

</div>