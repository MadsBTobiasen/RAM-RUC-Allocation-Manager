@page "{id:int}"
@using RAM___RUC_Allocation_Manager.Models
@model RAM___RUC_Allocation_Manager.Pages.EditLeaderPage.EditLeaderPageModel
@{
}

@section Scripts
{
    <script>
        $(document).ready(function () {
            $("#myModal").modal({ backdrop: "static" });
            $("#myModal").modal("show");
        });
    </script>
}

<table class="table table-bordered" width="60%">
    <col style="width: 7%">
    <col style="width: 74%">
    <col style="width: 10%">
    <col style="width: 9%">
    <thead>
        <tr class="btn-secondary active">
            <th>
                <div class="d-flex justify-content-between p-0">
                    <div><h5>Id </h5></div>
                    <div>
                        <a data-toggle="tooltip" title="Sort By Id" asp-page-handler="SortById"><i class="fa fa-angle-up"></i></a>
                        <a data-toggle="tooltip" title="Sort By Id Descending" asp-page-handler="SortByIdDescending"><i class="fa fa-angle-down"></i></a>
                    </div>
                </div>
            </th>
            <th>
                <div class="d-flex justify-content-between p-0">
                    <div>
                        <h5>Name </h5>
                    </div>
                    <div>
                        <a data-toggle="tooltip" title="Sort By Name" asp-page-handler="SortByName"><i class="fa fa-angle-up"></i></a>
                        <a data-toggle="tooltip" title="Sort By Name Descending" asp-page-handler="SortByNameDescending"><i class="fa fa-angle-down"></i></a>
                    </div>
                </div>

            </th>
            <th>
                <div class="d-flex justify-content-between p-0">
                    <div>
                        <h5>Price </h5>
                    </div>
                    <div>
                        <a data-toggle="tooltip" title="Sort By Price" asp-page-handler="SortByPrice"><i class="fa fa-angle-up"></i></a>
                        <a data-toggle="tooltip" title="Sort By Price Descending" asp-page-handler="SortByPriceDescending"><i class="fa fa-angle-down"></i></a>
                    </div>
                </div>
            </th>
            <th>
                <h5>Action</h5>
            </th>
        </tr>
    </thead>
    <tbody>
        @if (@Model.Users != null)
        {
            foreach (var user in Model.Users)
            {
                <tr class="btn-secondary">
                    <td>
                        @user.Id
                    </td>
                    <td>
                        @user.Name
                    </td>
                    <td>
                        @user.Type
                    </td>
                    <td>
                        <!-- Call to action buttons -->
                        <ul class="list-inline m-0">
                            <li class="list-inline-item">
                                <a class="btn btn-primary btn-sm" type="button" data-toggle="tooltip" title="Edit" asp-page="../EditEmployeePage/EditEmployeePage" asp-route-id="@user.Id"><i class="fa-light fa-pen"></i></a>
                                @*<button type="button" class="btn btn-primary" data-toggle="modal" data-target="#DeleteUser" asp-route-id="@user.ID"><i class="fa fa-trash"></i></button>*@
                                <a class="btn btn-primary btn-sm" type="button" data-toggle="tooltip" title="Edit" asp-page="../DeleteUser/DeleteUser" asp-route-id="@user.Id"><i class="fa fa-trash"></i></a>
                            </li>
                        </ul>
                    </td>
                </tr>
            }
        }
    </tbody>
</table>
<br />


<div class="modal" id="myModal">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Ændre Leder</h5>
                <a type="button" class="close" asp-page="../LeaderLandingPage/LeaderLandingPage">&times;</a>
            </div>
            <form method="post">
                <div class="modal-body">
                    <h5>Ændrer Lederen - @Model.UserToEdit.Name</h5>
                    <div class="form-group">
                        <label asp-for="@Model.UserToEdit.Id" class="control-lable"></label>
                        <input asp-for="@Model.UserToEdit.Id" class="form-control" />
                    </div>
                    <div class="form-group">
                        <label asp-for="@Model.UserToEdit.Name" class="control-lable"></label>
                        <input asp-for="@Model.UserToEdit.Name" class="form-control" />
                    </div>
                    <div class="form-group">
                        <label asp-for="@Model.UserToEdit.Username" class="control-lable"></label>
                        <input asp-for="@Model.UserToEdit.Username" class="form-control" />
                    </div>
                    <div class="form-group">
                        <label asp-for="@Model.UserToEdit.Password" class="control-lable"></label>
                        <input asp-for="@Model.UserToEdit.Password" class="form-control" />
                    </div>
                    <div class="form-group">
                        <label asp-for="@Model.UserToEdit.Email" class="control-lable"></label>
                        <input asp-for="@Model.UserToEdit.Email" class="form-control" />
                    </div>
                    <div class="form-group">
                        <label asp-for="@Model.UserToEdit.Type" class="control-lable"></label>
                        <select class="form-control" asp-for="@Model.UserToEdit.Type"
                                asp-items="Html.GetEnumSelectList<User.UserType>()">
                        </select>
                    </div>

                    <div class="form-group">
                        <input type="submit" value="Opdater Leder" class="btn btn-primary" />
                        <a class="btn btn-danger" asp-page="../LeaderLandingPage/LeaderLandingPage">Anuller</a>
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>
