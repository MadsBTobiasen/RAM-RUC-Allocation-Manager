@page
@using RAM___RUC_Allocation_Manager.Models
@model RAM___RUC_Allocation_Manager.Pages.AddUser.AddEmployeeModel
@{
}

@section Scripts
{
    <script>
        $(document).ready(function () {
            $("#myModal").modal({ backdrop: "static" });
            $("#myModal").modal("show");
        });
    </script>
}

<div class="row">

    <div class="col-1"></div>
    <div class="col-10">
        <div class="container" style="display: flex; justify-content: center;">
            <img src="~/assets/ram-full-icon-bg.png" class="ram-icon-bg">
        </div>
    </div>
    <div class="col-1"></div>

</div>

<form method="post">
    <div class="container">
        <div class="modal" id="myModal">
            <div class="modal-dialog">
                <div class="modal-content">

                    <div class="modal-header">
                        <h2 class="modal-title">Opret Ansat</h2>
                        <span><a asp-page="../LeaderLandingPage/LeaderLandingPage"><i class="fa-solid fa-lg fa-xmark"></i></a></span>
                    </div>

                    <div class="modal-body">

                        <div class="form-group">
                            <label asp-for="@Model.Employee.Name" class="control-label"></label>
                            <input asp-for="@Model.Employee.Name" class="form-control" placeholder="Indtast navn på ansat.."/>
                        </div>
                        <div class="form-group">
                            <label asp-for="@Model.Employee.Password" class="control-label"></label>
                            <input asp-for="@Model.Employee.Password" class="form-control" placeholder="Indtast password for ny ansat.."/>
                        </div>
                        <div class="form-group">
                            <label asp-for="@Model.Employee.Username" class="control-label"></label>
                            <input asp-for="@Model.Employee.Username" class="form-control" placeholder="Indtast brugernavn for ny ansat.." />
                        </div>
                        <div class="form-group">
                            <label asp-for="@Model.Employee.Email" class="control-label"></label>
                            <input asp-for="@Model.Employee.Email" class="form-control" placeholder="Indtast email for ny ansat.."/>
                        </div>

                        <div class="form-group">
                            <label asp-for="@Model.Employee.Title" class="control-label"></label>
                            <select class="form-control" asp-for="Employee.Title"
                                    asp-items="Html.GetEnumSelectList<Employee.EmployeeTitle>()">
                            </select>
                        </div>

                    </div>

                    <div class="modal-footer">
                        
                        <div class="row w-100">
                            
                            <div class="col-6">
                                <a type="button" class="w-100 btn btn-danger" asp-page="../LeaderLandingPage/LeaderLandingPage">Annullér</a>
                            </div>
                            <div class="col-6">
                                <input type="submit" value="Opret Ansat" class="w-100 btn btn-primary">
                            </div>

                        </div>

                    </div>

                </div>
            </div>
        </div>
    </div>
</form>