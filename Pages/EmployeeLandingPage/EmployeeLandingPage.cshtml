@page "{id:int}"
@model RAM___RUC_Allocation_Manager.Pages.EmployeeLandingPage.EmployeeLandingPageModel
@{
}

@if (HttpContext.User.HasClaim(System.Security.Claims.ClaimTypes.Role, Models.User.UserType.Leader.ToString()))
{
    <h2>Oversigt for: @Model.Employee.Name</h2>
    <div class="row">
        <div class="col-3 pl-0"><a class="btn btn-primary" asp-route-id="-1" asp-page="/LeaderLandingPage/LeaderLandingPage">Gå Tilbage</a></div>
        <div class="col-9"></div>
    </div>
}
else
{
    <h2>Velkommen @Model.Employee.Name</h2>
}
<hr />

<div class="row">

    <div class="col-1"></div>
    <div class="col-10">

        <h3 class="">Time fordeling</h3>

        <table class="employee-landing-page allocated-hours-table">

            <tbody>

                <tr>
                    <td>Total Allokerede Timer:</td>
                    <td>@Model.ConvertMinutesToHours(Model.Employee.CalculateTotalAllocationMinutes(Model.BaseSettings))</td>
                    <td><a asp-route-id="@Model.Employee.Id" asp-page="/TotalAllocatedHoursPage/TotalAllocatedHoursPage"><i class="fa-solid fa-circle-info"></i></a></td>
                </tr>

                <tr>
                    <td>Total Kursus Timer:</td>
                    <td>@Model.ConvertMinutesToHours(Model.Employee.CalculateTotalCourseMinutes(Model.BaseSettings))</td>
                    <td><a asp-route-id="@Model.Employee.Id" asp-page="/TotalCourseHoursPage/TotalCourseHoursPage"><i class="fa-solid fa-circle-info"></i></a></td>
                </tr>

                <tr>
                    <td>Total Vejlednings Timer:</td>
                    <td>@Model.ConvertMinutesToHours(Model.Employee.CalculateTotalSupervisionMinutes(Model.BaseSettings))</td>
                    <td><a asp-route-id="@Model.Employee.Id" asp-page="/TotalSupervisionHoursPage/TotalSupervisionHoursPage"><i class="fa-solid fa-circle-info"></i></a></td>
                </tr>

                <tr>
                    <td>Total Eksaminer Timer:</td>
                    <td>@Model.ConvertMinutesToHours(Model.Employee.CalculateTotalExamMinutes(Model.BaseSettings))</td>
                    <td><a asp-route-id="@Model.Employee.Id" asp-page="/TotalExaminationHoursPage/TotalExaminationHoursPage"><i class="fa-solid fa-circle-info"></i></a></td>
                </tr>

                <tr>
                    <td>Total Øvrige Timer:</td>
                    <td>@Model.ConvertMinutesToHours(Model.Employee.CalculateTotalMiscMinutes(Model.BaseSettings))</td>
                    <td><a asp-route-id="@Model.Employee.Id" asp-page="/TotalMiscHoursPage/TotalMiscHoursPage"><i class="fa-solid fa-circle-info"></i></a></td>
                </tr>

            </tbody>

        </table>

    </div>
    <div class="col-1"></div>

</div>
