}

<h2>Indstillinger</h2>
<div class="row">
    <div class="col-3 pl-0"><a class="btn btn-primary" asp-route-id="-1" asp-page="/LeaderLandingPage/LeaderLandingPage">Gå Tilbage</a></div>
    <div class="col-9"></div>
</div>

<hr />

<h3>Studier</h3>

<table class="leader-landing-page table-dark table-striped">

    <thead>

        <tr>
            <th scope="col" style="width:75%" class="text-center">Navn</th>
            <th scope="col" style="width:25%" class="text-center">Redigér</th>
        </tr>

    </thead>
    <tbody>

        @foreach (Models.Programme p in Model.Programmes)
        {
            <tr style="height:1rem;">
                <td style="width:75%" class="text-left pl-xl-5">@p.Name</td>
                <td style="width:25%" class="text-center"><a data-toggle="tooltip" title="Redigér Studie" asp-route-id="@p.Id" asp-page="/EditSettingsProgramme/EditSettingsProgramme2"><i class="fa-solid fa-pen"></i></a></td>
            </tr>
        }

    </tbody>

</table>

<hr />

<h3>Opret Studie</h3>

<form method="post">

    <div class="form-group">

        <h5 class="control-label mb-2">Studie navn</h5>
        <input asp-for="@Model.ProgrammeName" class="form-control mb-2" placeholder="Indtast navn på studie.." />

        <h5 class="control-label mb-2">Leder for studie</h5>

        <select name="userId" id="Leader" class="form-control mb-2">
            @foreach (var l in @Model.Leaders)
            {
                <option value="@l.Id" asp-for="@l">@l.Name</option>
            }
        </select>

        <div class="row">

            <div class="col-6 form-group pl-0">
                <a asp-page="/" class="btn btn-danger form-control mb-2">Annullér</a>
            </div>

            <div class="col-6 form-group pr-0">
                <input type="submit" asp-page-handler="LeaderProgramme" value="Opret studie" class="btn btn-primary form-control mb-2" />
            </div>

        </div>

    </div>

</form>

