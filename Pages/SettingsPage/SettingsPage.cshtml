@page
@model RAM___RUC_Allocation_Manager.Pages.SettingsPage.SettingsPageModel
@{
}
<h2>Settings Page</h2>
<div class="container" style="display: flex; justify-content: left;">
    <div>
    </div>
    <form method="post">
        <div class="form-group">
            <label asp-for="ProgrammeName" class="col-form-label" style="color:white"></label>
            <div>
                <input asp-for="ProgrammeName" />
            </div>
        </div>
        <div class="form-group">
            <label asp-for="Leader">Choose a Leader:</label>
            <select id="Leader" name="Leaders">
                @foreach (var l in @Model.Leaders)
                {
                    <option asp-for="@l">@l.Name</option>
                }
            </select>
        </div>
        <div class="form-group">
            <button class="btn btn-outline-light">Create Programme</button>
        </div>
    </form>
    <a asp-page="/EditSettingsProgramme/EditSettingsProgramme"><button class="btn btn-outline-light">Edit Programme</button></a>
    <a asp-page="/LeaderLandingPage/LeaderLandingPage/10"><button class="btn btn-outline-light">Back</button></a>
</div>