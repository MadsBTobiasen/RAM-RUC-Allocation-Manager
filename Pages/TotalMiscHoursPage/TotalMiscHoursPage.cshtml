@page "{id:int}"
@using RAM___RUC_Allocation_Manager.Models.DbConnections
@model RAM___RUC_Allocation_Manager.Pages.TotalMiscHoursPage.TotalMiscHoursPageModel
@{
}
<h2 class="pb-3">Detaljer for totale øvrige timer</h2>

<div class="row">

    <div class="col-1"></div>
    <div class="col-10">

        <h3 class="">Time fordeling</h3>

        <table class="employee-landing-page allocated-hours-table">

            <thead style="width: 0; height: 0;">
                <tr>
                    <th></th>
                    <th></th>
                    <th></th>
                    <th></th>
                </tr>
            </thead>

            <tbody>

                <tr>
                    <td>Slutevaluering af PhD:</td>
                    <td></td>
                    <td></td>
                    <td>@Model.Employee.PhdsTasks.Where(phd => phd.RoleOfEmployee == PhdTasks.EmployeeRole.EndEvaluator).Count() PhD(er)</td>
                </tr>

                <tr>
                    <td><b>Bedømmelsesudvalg:</b></td>
                    <td></td>
                    <td></td>
                    <td>@Model.TotalCommittees Udvalg</td>
                </tr>

                <tr class="font-weight-normal">
                    <td></td>
                    <td>Ansættelsesudvalg</td>
                    <td>@Model.Employee.EmployeeHiringCommittees.Count()</td>
                    <td>@Model.ConvertMinutesToHours(Model.TotalHiringCommitteeMinutes)</td>
                </tr>
                <tr class="font-weight-normal">
                    <td></td>
                    <td>Forfremmelsesudvalg</td>
                    <td>@Model.Employee.PromotionCommittees.Count()</td>
                    <td>@Model.ConvertMinutesToHours(Model.TotalPromotionCommitteeMinutes)</td>
                </tr>
                <tr class="font-weight-normal">
                    <td></td>
                    <td>PhD bedømmelsesudvalg</td>
                    <td>@Model.Employee.PhdCommittees</td>
                    <td>@Model.ConvertMinutesToHours(Model.TotalPhdCommitteeMinutes)</td>
                </tr>
                <tr class="font-weight-normal">
                    <td></td>
                    <td>Andre udvalg</td>
                    <td>@Model.Employee.EmployeeCustomCommittees.Count()</td>
                    <td>@Model.ConvertMinutesToHours(Model.TotalCustomCommitteeMinutes)</td>
                </tr>
                <tr>
                    <td>Pædagogisk kvalificering:</td>
                    <td></td>
                    <td></td>
                    <td>@Model.ConvertMinutesToHours(Model.BaseSettings.PedagogicalQualification)</td>
                </tr>
                <tr>
                    <td>Gruppeleder:</td>
                    <td></td>
                    <td></td>
                    @if (Model.Employee.IsGroupLeader)
                    {
                        <td>@Model.ConvertMinutesToHours(Model.BaseSettings.GroupLeaderMinuteValue)</td>
                    }
                    else
                    {
                        <td>0</td>
                    }
                </tr>

            </tbody>

        </table>

    </div>
    <div class="col-1"></div>

</div>