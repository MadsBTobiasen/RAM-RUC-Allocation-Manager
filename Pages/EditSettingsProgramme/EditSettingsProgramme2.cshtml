@page "{id:int}"
@model RAM___RUC_Allocation_Manager.Pages.EditSettingsProgramme.EditSettingsProgramme2Model
@{
}

<h2>Redigér Studie - @Model.Programme.Name</h2>
<div class="row">
    <div class="col-3 pl-0"><a class="btn btn-primary" asp-page="../SettingsPage/SettingsPage">Gå Tilbage</a></div>
    <div class="col-9"></div>
</div>

<hr />

<form method="post">

    <div class="form-group">

        <h5 class="control-label mb-2">Studie Navn</h5>
        <input asp-for="@Model.ProgrammeName" value="@Model.Programme.Name" class="form-control mb-2" />

        <input hidden="" name="programmeId" value="@Model.Programme.Id" />

        <a type="button" class="btn btn-danger form-control mb-2" asp-page="../SettingsPage/SettingsPage">Annullér</a>
        <button class="btn btn-primary form-control mb-2" asp-page-handler="Edit">Gem ændringer</button>

    </div>

</form>

<hr />

<h3>Tilføj til studie</h3>

<form method="post">

    <div class="form-group">

        <h5 class="control-label mb-2">Vælg én ny underviser</h5>
        <select id="Employee" name="employeeId" class="form-control mb-2">
            <option value="-1">Ingen nye</option>
            @foreach (var l in @Model.Employees)
            {
                <option value="@l.Id" asp-for="@l">@l.Name</option>
            }
        </select>

        <h5 class="control-label mb-2">Vælg én ny leder</h5>
        <select id="Leader" name="leaderId" class="form-control mb-2">
            <option value="-1">Ingen nye</option>
            @foreach (var l in @Model.Leaders)
            {
                <option value="@l.Id" asp-for="@l">@l.Name</option>
            }
        </select>

        <a type="button" class="btn btn-danger form-control mb-2" asp-page="../SettingsPage/SettingsPage">Annullér</a>
        <button class="btn btn-primary form-control mb-2" asp-page-handler="AddUsers">Tilføj brugere til studie</button>

    </div>

</form>

