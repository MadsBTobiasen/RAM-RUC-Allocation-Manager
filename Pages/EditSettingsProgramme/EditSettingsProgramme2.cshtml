@page "{id:int}"
@model RAM___RUC_Allocation_Manager.Pages.EditSettingsProgramme.EditSettingsProgramme2Model
@{
}
<h2>Edit @Model.Programme.Name</h2>
<div class="container" style="display: flex; justify-content: left;">
    <form method="post">
        <div class="form-group">
            <input hidden="" name="programmeId" value="@Model.Programme.Id" />
            <label asp-for="@Model.Programme.Name" class="col-form-label" style="color: white"></label>
            <input asp-for="@Model.ProgrammeName" />
        </div>

        <div class="form-group">
            <button class="btn btn-outline-light" asp-page-handler="Edit">Edit Programme</button>
        </div>

    </form>
    <form method="post">
        <div class="form-group">
            <label>Vælg en underviser:</label>
            <select id="Employee" name="employeeId">
                <option value="-1">Ingen nye</option>
                @foreach (var l in @Model.Employees)
                {
                    <option value="@l.Id" asp-for="@l">@l.Name</option>
                }
                <div class="form-group">
                    <button class="btn btn-outline-light">Add Employee</button>
                </div>
            </select>

        </div>
        <div class="form-group">
            <label>vælg en leder</label>
            <select id="Leader" name="leaderId">
                <option value="-1">Ingen nye</option>
                @foreach (var l in @Model.Leaders)
                {
                    <option value="@l.Id" asp-for="@l">@l.Name</option>
                }
            </select>
        </div>
        <div class="form-group">
            <button class="btn btn-outline-light" asp-page-handler="AddUsers">Tilføj til studie</button>
        </div>
    </form>
</div>
<a asp-page="/EditSettingsProgramme/EditSettingsProgramme"><button class="btn btn-outline-light">Back</button></a>