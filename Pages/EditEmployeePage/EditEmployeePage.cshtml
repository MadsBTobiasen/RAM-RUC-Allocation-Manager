@page "{id:int}"
@using RAM___RUC_Allocation_Manager.Models
@using RAM___RUC_Allocation_Manager.Models.DbConnections
@using RAM___RUC_Allocation_Manager.Models.WorkAssigments
@using RAM___RUC_Allocation_Manager.MockData
@model RAM___RUC_Allocation_Manager.Pages.EditEmployeePage.EditEmployeePageModel
@{
}

@section Scripts
{
    <script>
        $(document).ready(function () {
            $("#myModal").modal({ backdrop: "static" });
            $("#myModal").modal("show");
        });
    </script>
}

<div class="row">

    <div class="col-1"></div>
    <div class="col-10">
        <div class="container" style="display: flex; justify-content: center;">
            <img src="~/assets/ram-full-icon-bg.png" class="ram-icon-bg">
        </div>
    </div>
    <div class="col-1"></div>

</div>

<div class="modal" id="myModal">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h2 class="modal-title">Redigér Ansat</h2>
                <span><a asp-page="../LeaderLandingPage/LeaderLandingPage"><i class="fa-solid fa-lg fa-xmark"></i></a></span>
            </div>
            <form method="post">
                <div class="modal-body">

                    <span>Redigéring af brugeren: <b>@Model.EmployeeToEdit.Name (@Model.EmployeeToEdit.Username)</b></span>

                    <hr />

                    <div class="form-group">
                        <label asp-for="@Model.EmployeeToEdit.Id" class="control-label"></label>
                        <input asp-for="@Model.EmployeeToEdit.Id" readonly class="form-control" />
                    </div>
                    <div class="form-group">
                        <label asp-for="@Model.EmployeeToEdit.Name" class="control-label"></label>
                        <input asp-for="@Model.EmployeeToEdit.Name" class="form-control" />
                    </div>
                    <div class="form-group">
                        <label asp-for="@Model.EmployeeToEdit.Username" class="control-label"></label>
                        <input asp-for="@Model.EmployeeToEdit.Username" class="form-control" />
                    </div>
                    <div class="form-group">
                        <label asp-for="@Model.EmployeeToEdit.Password" class="control-label"></label>
                        <input asp-for="@Model.EmployeeToEdit.Password" class="form-control" />
                    </div>
                    <div class="form-group">
                        <label asp-for="@Model.EmployeeToEdit.Email" class="control-label"></label>
                        <input asp-for="@Model.EmployeeToEdit.Email" class="form-control" />
                    </div>
                    <div class="form-group">
                        <label asp-for="@Model.EmployeeToEdit.Type" class="control-label"></label>
                        <select class="form-control" asp-for="@Model.EmployeeToEdit.Type"
                                asp-items="Html.GetEnumSelectList<User.UserType>()">
                        </select>
                    </div>

                    <div class="form-group">
                        <label asp-for="@Model.EmployeeToEdit.Title" class="control-label"></label>
                        <select class="form-control" asp-for="@Model.EmployeeToEdit.Title"
                                asp-items="Html.GetEnumSelectList<Employee.EmployeeTitle>()">
                        </select>
                    </div>

                </div>

                <div class="modal-footer">

                    <div class="row w-100">

                        <div class="col-6">
                            <a type="button" class="w-100 btn btn-danger" asp-page="../LeaderLandingPage/LeaderLandingPage">Annullér</a>
                        </div>
                        <div class="col-6">
                            <input type="submit" value="Opdatér Ansat" class="w-100 btn btn-primary">
                        </div>

                    </div>

                </div>

            </form>

        </div>
    </div>
</div>
