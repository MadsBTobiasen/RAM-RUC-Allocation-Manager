    <div class="col-1">

    </div>

    <div class="col-10 row">

        <div class="col-4 text-center"><h5>Id</h5></div>
        <div class="col-4 text-center"><h5>Kandidat</h5></div>
        <div class="col-4 text-center"><h5>Fjern</h5></div>
